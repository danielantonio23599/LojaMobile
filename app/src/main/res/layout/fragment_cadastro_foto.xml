<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:fitsSystemWindows="true"
 >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/buenard"
            android:paddingLeft="8dp"
            android:text="Tire uma foto para gente?"
            android:textColor="@color/colorAccent"
            android:textSize="24sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/app_bar_foto"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="140dp"
            android:innerRadius="0dp"
            app:cardCornerRadius="200dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/imagem_signin"
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/degrade_linear" />

            <TextView
                android:id="@+id/tvFoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|center_horizontal"
                android:text="Foto Perfil"
                android:textColor="@color/design_default_color_background"
                android:textSize="14sp">

            </TextView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/button3"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/backgroud_botao_arredondado"
        android:text="Foto Galeria"
        android:textColor="@android:color/darker_gray" />

    <Button
        android:id="@+id/button2"
        android:layout_gravity="bottom"
        android:layout_marginBottom="60dp"
        app:layout_anchor="@id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/backgroud_botao_arredondado"
        android:text="Tirar Foto"
        android:textColor="@android:color/darker_gray" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>